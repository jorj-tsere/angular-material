{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "src",
    "paths": {
      "@env": ["environments/environment"],
      "@core/*": ["app/@core/*"],
      "@core-services": ["app/@core/services/index.ts"],
      "@shared/*": ["app/@shared/*"],
      "@pages/*": ["app/pages/*"],
      "@auth-module-models-barrel": ["app/pages/auth/models/index.ts"],
      "auth-module-models/*": ["app/pages/auth/models/*"],
      "users-page/*": ["app/pages/users-page/*"],
      "auth-page/*": ["app/pages/auth/*"],
      "@store-barrel": ["app/store/index.ts"],
      "@store/*": ["app/store/*"],
      "@core-constants": ["app/consts/index.ts"],
    },
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
